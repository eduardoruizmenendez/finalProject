<core:FragmentDefinition xmlns:core="sap.ui.core" 
                         xmlns="sap.m"  
                         xmlns:f="sap.ui.layout.form">

	<Dialog title="{i18n>nuevoAscenso}">
		<content>
			<f:Form>
				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanXL="3"
						labelSpanL="3"
						labelSpanM="3"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="4"
						emptySpanL="4"
						emptySpanM="4"
						emptySpanS="0"
						columnsXL="1"
						columnsL="1"
						columnsM="1"
						singleContainerFullSize="false" />
				</f:layout>
				<f:formContainers>
					<f:FormContainer>
						<f:formElements>
							<f:FormElement label="{i18n>salario}">
								<f:fields>
									<Input value="{ascenso>/Ammount}" id="name"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>fecha}">
								<f:fields>
									<DatePicker dateValue="{ascenso>/CreationDate}"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="{i18n>comentario}">
								<f:fields>
									<TextArea value="{ascenso>/Comments}"/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
			</f:Form>
		</content>
		<buttons>
			<Button text="{i18n>aceptar}" press="onAceptarAscenso"></Button>
			<Button text="{i18n>cancel}" press="onCancelarAscenso"></Button>
		</buttons>
	</Dialog>
</core:FragmentDefinition>