<core:FragmentDefinition 
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m">

    <form:SimpleForm
				title="1. {i18n>tipoEmpleado}"
				editable="false"
				layout="ResponsiveGridLayout">
			<form:content>
				<Label text="{i18n>tipo}"/>
				<Text text="{= ${/TipoEmpleado} === 0 ? ${i18n>botonTipoInterno} : ${/TipoEmpleado} === 1 ? ${i18n>botonTipoAutonomo} : ${i18n>botonTipoGerente}}"/>
				<Link press="goToTipoEmpleado" text="{i18n>editar}" />
			</form:content>
		</form:SimpleForm>
		
		<form:SimpleForm
				title="2. {i18n>datosEmpleado}"
				editable="false"
				layout="ResponsiveGridLayout">
			<form:content>
				<Label text="{i18n>nombre}"/>
				<Text text="{/NombreEmpleado}"/>

				<Label text="{i18n>apellidos}"/>
				<Text text="{/ApellidosEmpleado}"/>

				<Label text="{= ${/TipoEmpleado} !== 1 ? ${i18n>dni} : ${i18n>cif} }"/>
				<Text  text="{= ${/TipoEmpleado} !== 1 ? ${/DNIEmpleado} : ${/CIFEmpleado} }"/>

				<Label text="{= ${/TipoEmpleado} !== 1 ? ${i18n>salarioBrutoAnual} : ${i18n>precioDiario} }"/>
				<Text  text="{/SalarioBruto}"/>

				<Label text="{i18n>fechaIncorporacion}"/>
				<Text  text="{path:'/FechaIncorporacion',type:'sap.ui.model.type.Date'}"/>

				<Link press="goToDatosEmpleado" text="{i18n>editar}" />
			</form:content>
		</form:SimpleForm>
		
		<form:SimpleForm
				title="3. {i18n>infoAdicional}"
				editable="false"
				layout="ResponsiveGridLayout">
			<form:content>
                <VBox >
                    <HBox width="60%">
                        <Label text="{i18n>comentario}:" class="sapUiMediumMarginEnd" />
                        <TextArea value="{/Comentario}"
                                  enabled="false"
                                  width="100%"/>
                    </HBox>
                    <HBox width="60%">
                        <Label text="{i18n>documentos}:" class="sapUiMediumMarginEnd"/>
                        <Text text="{/ContadorAnexos} ({i18n>ficheros})" 
                            class="sapUiSmallMarginBottom"/>
                    </HBox>
                    <HBox width="60%">
                        <List items="{/AnexosInfo}">
                            <items>
                                <StandardListItem title="{Name}"></StandardListItem>
                            </items>
                        </List>
                    </HBox>
                </VBox>
				<Link press="goToInfoAdicional" text="{i18n>editar}" />
			</form:content>
		</form:SimpleForm>

</core:FragmentDefinition>